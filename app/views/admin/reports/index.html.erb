<div class="bg-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-2xl font-bold">
        <%= t('admin.reports.title') %>
      </h1>
      <%= link_to admin_dashboard_path, class: "text-blue-600 hover:text-blue-800" do %>
        â† <%= t('admin.dashboard') %>
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-yellow-50 p-4 rounded-lg">
        <div class="text-2xl font-bold text-yellow-700"><%= @stats[:pending] %></div>
        <div class="text-sm text-gray-600">
          <%= t('admin.reports.stats.pending') %>
        </div>
      </div>
      <div class="bg-green-50 p-4 rounded-lg">
        <div class="text-2xl font-bold text-green-700"><%= @stats[:resolved] %></div>
        <div class="text-sm text-gray-600">
          <%= t('admin.reports.stats.resolved') %>
        </div>
      </div>
      <div class="bg-gray-50 p-4 rounded-lg">
        <div class="text-2xl font-bold text-gray-700"><%= @stats[:dismissed] %></div>
        <div class="text-sm text-gray-600">
          <%= t('admin.reports.stats.dismissed') %>
        </div>
      </div>
      <div class="bg-blue-50 p-4 rounded-lg">
        <div class="text-2xl font-bold text-blue-700"><%= @stats[:total] %></div>
        <div class="text-sm text-gray-600">
          <%= t('admin.reports.stats.total') %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-gray-50 p-4 rounded-lg mb-6">
      <%= form_with url: admin_reports_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |f| %>
        <%= f.select :status, 
            options_for_select([
              [t('admin.reports.statuses.all'), ""],
              [t('admin.reports.statuses.pending'), "pending"],
              [t('admin.reports.statuses.reviewed'), "reviewed"],
              [t('admin.reports.statuses.resolved'), "resolved"],
              [t('admin.reports.statuses.dismissed'), "dismissed"]
            ], params[:status]),
            {}, 
            class: "px-3 py-2 border rounded-md" %>
            
        <%= f.select :type,
            options_for_select([
              [t('admin.reports.types.all'), ""],
              [t('admin.reports.types.post'), "Post"],
              [t('admin.reports.types.user'), "User"],
              [t('admin.reports.types.message'), "ConversationMessage"]
            ], params[:type]),
            {},
            class: "px-3 py-2 border rounded-md" %>
            
        <label class="flex items-center">
          <%= check_box_tag :unhandled, "true", params[:unhandled] == "true", class: "mr-2" %>
          <%= t('admin.reports.filters.unprocessed_only') %>
        </label>
        
        <%= f.submit t('admin.reports.actions.filter'), class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <% end %>
    </div>

    <!-- Reports Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <input type="checkbox" id="select-all" class="rounded">
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.id') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.type') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.target') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.reason') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.reporter') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.time') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.status') %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('admin.reports.table.actions') %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @reports.each do |report| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= check_box_tag "report_ids[]", report.id, false, class: "report-checkbox rounded" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                #<%= report.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= report.reportable_type %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% case report.reportable_type %>
                <% when "Post" %>
                  <%= link_to truncate(report.reportable.title, length: 30), 
                      post_path(report.reportable), 
                      target: "_blank",
                      class: "text-blue-600 hover:text-blue-800" %>
                <% when "User" %>
                  <%= link_to report.reportable.display_name, 
                      user_path(report.reportable),
                      target: "_blank", 
                      class: "text-blue-600 hover:text-blue-800" %>
                <% when "ConversationMessage" %>
                  <%= truncate(report.reportable.body, length: 30) %>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= render "shared/badge",
                    label: report.category || report.reason_code,
                    class_name: "bg-red-100 text-red-800" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= report.reporter.display_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(report.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= render "shared/badge",
                    icon: report_status_icon(report),
                    label: report_status_label(report),
                    class_name: report_status_badge_class(report) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to t('admin.reports.actions.view'), 
                    admin_report_path(report), 
                    class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Batch Actions -->
    <div class="mt-4 flex items-center gap-4">
      <%= form_with url: batch_action_admin_reports_path, local: true, id: "batch-form" do |f| %>
        <span class="text-sm text-gray-600">
          <%= t('admin.reports.actions.with_selected') %>
        </span>
        <%= f.select :batch_action, 
            options_for_select([
              ["", ""],
              [t('admin.reports.actions.resolve'), "resolve"],
              [t('admin.reports.actions.dismiss'), "dismiss"]
            ]),
            {},
            class: "px-3 py-2 border rounded-md",
            onchange: "if(this.value) { document.getElementById('batch-form').submit(); }" %>
        <%= f.submit "Apply", class: "px-3 py-2 bg-blue-600 text-white rounded-md", style: "display: none;", id: "batch-submit" %>
      <% end %>
    </div>

    <!-- Pagination would go here -->
    <% if @reports.respond_to?(:total_pages) %>
      <div class="mt-6">
        <%= paginate @reports %>
      </div>
    <% end %>
  </div>
</div>

<script>
  // Select all checkbox functionality
  document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.report-checkbox');
    checkboxes.forEach(cb => cb.checked = this.checked);
  });
  
  // Submit selected checkboxes with batch form
  document.getElementById('batch-form').addEventListener('submit', function(e) {
    const selectedIds = Array.from(document.querySelectorAll('.report-checkbox:checked'))
      .map(cb => cb.value);
    
    selectedIds.forEach(id => {
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = 'report_ids[]';
      input.value = id;
      this.appendChild(input);
    });
  });
</script>