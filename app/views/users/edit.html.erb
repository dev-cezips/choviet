<script>
  // Preview avatar on file selection
  document.getElementById('user_avatar').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        const preview = document.getElementById('avatar-preview');
        if (preview.tagName === 'IMG') {
          preview.src = e.target.result;
        } else {
          const img = document.createElement('img');
          img.src = e.target.result;
          img.className = 'w-20 h-20 rounded-full object-cover';
          img.id = 'avatar-preview';
          preview.parentNode.replaceChild(img, preview);
        }
      }
      reader.readAsDataURL(file);
    }
  });

  // GPS Location Detection
  document.getElementById('detect-location-btn').addEventListener('click', function() {
    const statusDiv = document.getElementById('location-status');
    const locationSelect = document.getElementById('user_location_code');
    const latitudeField = document.getElementById('user_latitude');
    const longitudeField = document.getElementById('user_longitude');
    
    statusDiv.classList.remove('hidden', 'text-green-600', 'text-red-600');
    statusDiv.classList.add('text-blue-600');
    statusDiv.innerHTML = 'üîç ƒêang x√°c ƒë·ªãnh v·ªã tr√≠...';

    if (!navigator.geolocation) {
      statusDiv.classList.remove('text-blue-600');
      statusDiv.classList.add('text-red-600');
      statusDiv.innerHTML = '‚ùå Tr√¨nh duy·ªát kh√¥ng h·ªó tr·ª£ ƒë·ªãnh v·ªã';
      return;
    }

    navigator.geolocation.getCurrentPosition(
      function(position) {
        const lat = position.coords.latitude;
        const lng = position.coords.longitude;
        
        latitudeField.value = lat;
        longitudeField.value = lng;
        
        // Determine location based on coordinates
        let detectedLocation = '';
        
        // Seoul coordinates range
        if (lat >= 37.4 && lat <= 37.7 && lng >= 126.8 && lng <= 127.2) {
          detectedLocation = 'seoul';
        }
        // Gyeonggi coordinates range (includes Ansan, Suwon)
        else if (lat >= 37.0 && lat <= 37.8 && lng >= 126.6 && lng <= 127.6) {
          detectedLocation = 'gyeonggi';
        }
        // Busan
        else if (lat >= 35.0 && lat <= 35.3 && lng >= 128.9 && lng <= 129.3) {
          detectedLocation = 'busan';
        }
        // Incheon
        else if (lat >= 37.3 && lat <= 37.6 && lng >= 126.3 && lng <= 126.8) {
          detectedLocation = 'incheon';
        }
        
        if (detectedLocation) {
          locationSelect.value = detectedLocation;
          statusDiv.classList.remove('text-blue-600');
          statusDiv.classList.add('text-green-600');
          statusDiv.innerHTML = '‚úÖ ƒê√£ x√°c ƒë·ªãnh v·ªã tr√≠ th√†nh c√¥ng';
        } else {
          statusDiv.classList.remove('text-blue-600');
          statusDiv.classList.add('text-amber-600');
          statusDiv.innerHTML = '‚ö†Ô∏è Kh√¥ng th·ªÉ x√°c ƒë·ªãnh khu v·ª±c ch√≠nh x√°c, vui l√≤ng ch·ªçn th·ªß c√¥ng';
        }
        
        setTimeout(() => {
          statusDiv.classList.add('hidden');
        }, 3000);
      },
      function(error) {
        statusDiv.classList.remove('text-blue-600');
        statusDiv.classList.add('text-red-600');
        
        switch(error.code) {
          case error.PERMISSION_DENIED:
            statusDiv.innerHTML = '‚ùå B·∫°n ƒë√£ t·ª´ ch·ªëi quy·ªÅn truy c·∫≠p v·ªã tr√≠';
            break;
          case error.POSITION_UNAVAILABLE:
            statusDiv.innerHTML = '‚ùå Kh√¥ng th·ªÉ x√°c ƒë·ªãnh v·ªã tr√≠';
            break;
          case error.TIMEOUT:
            statusDiv.innerHTML = '‚ùå H·∫øt th·ªùi gian x√°c ƒë·ªãnh v·ªã tr√≠';
            break;
          default:
            statusDiv.innerHTML = '‚ùå L·ªói x√°c ƒë·ªãnh v·ªã tr√≠';
            break;
        }
      }
    );
  });
</script>