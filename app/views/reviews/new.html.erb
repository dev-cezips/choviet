<script>
  // Star rating interaction
  document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('[data-star-rating-target="star"]');
    const radios = document.querySelectorAll('[data-star-rating-target="radio"]');
    const label = document.querySelector('[data-star-rating-target="label"]');
    
    const labels = [
      'R·∫•t t·ªá',
      'T·ªá', 
      'B√¨nh th∆∞·ªùng',
      'T·ªët',
      'R·∫•t t·ªët'
    ];
    
    function updateStars(rating) {
      stars.forEach((star, index) => {
        if (index < rating) {
          star.classList.add('text-yellow-400');
          star.classList.remove('text-gray-300');
        } else {
          star.classList.remove('text-yellow-400');
          star.classList.add('text-gray-300');
        }
      });
      
      if (rating > 0) {
        label.textContent = labels[rating - 1];
        // Show comment section after rating selection
        document.getElementById('comment-section').style.display = 'block';
      }
    }
    
    // Handle star clicks
    stars.forEach((star, index) => {
      star.addEventListener('click', function() {
        radios[index].checked = true;
        updateStars(index + 1);
      });
      
      // Hover effect
      star.addEventListener('mouseenter', function() {
        stars.forEach((s, i) => {
          if (i <= index) {
            s.classList.add('text-yellow-400');
            s.classList.remove('text-gray-300');
          } else {
            s.classList.remove('text-yellow-400');
            s.classList.add('text-gray-300');
          }
        });
      });
    });
    
    // Reset on mouse leave
    const container = document.querySelector('[data-controller="star-rating"]');
    container.addEventListener('mouseleave', function() {
      const checkedRadio = document.querySelector('[data-star-rating-target="radio"]:checked');
      if (checkedRadio) {
        updateStars(parseInt(checkedRadio.value));
      } else {
        updateStars(0);
      }
    });
    
    // Handle radio changes
    radios.forEach(radio => {
      radio.addEventListener('change', function() {
        updateStars(parseInt(this.value));
      });
    });
    
    // Review template buttons functionality
    document.querySelectorAll('.review-template').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const textarea = document.getElementById('review-comment-textarea');
        const buttonText = this.textContent.trim();
        
        // If textarea is empty, just add the text
        if (textarea.value.trim() === '') {
          textarea.value = buttonText;
        } else {
          // If there's already text, add a space and append
          textarea.value += ' ' + buttonText;
        }
        
        // Focus the textarea so user can continue typing if needed
        textarea.focus();
        
        // Trigger input event to adjust height if needed
        const event = new Event('input', { bubbles: true });
        textarea.dispatchEvent(event);
      });
    });
  });
</script>