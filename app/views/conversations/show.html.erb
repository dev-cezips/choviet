<div class="h-screen flex flex-col bg-gray-100">
  <!-- Header -->
  <div class="bg-white border-b px-4 py-3 flex items-center gap-3 shadow-sm">
    <%= link_to conversations_path, class: "text-gray-600 hover:text-gray-900" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    
    <div class="flex items-center gap-3 flex-1">
      <% if @other_user.avatar.attached? %>
        <%= image_tag @other_user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
      <% else %>
        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold">
          <%= @other_user.display_name.first.upcase %>
        </div>
      <% end %>
      
      <div>
        <h3 class="font-semibold text-gray-900"><%= @other_user.display_name %></h3>
        <p class="text-xs text-gray-500">Member since <%= time_ago_in_words(@other_user.created_at) %> ago</p>
      </div>
    </div>
    
    <!-- Block button in header -->
    <div class="ml-auto">
      <%= render "blocks/block_button", user: @other_user %>
    </div>
  </div>
  
  <!-- Messages Container -->
  <div class="flex-1 overflow-y-auto px-4 py-4" id="messages_container">
    <%= turbo_stream_from [@conversation, current_user] %>
    
    <div id="messages" class="space-y-4">
      <%= render @messages %>
    </div>
  </div>
  
  <!-- Message Form -->
  <div class="bg-white border-t px-4 py-3">
    <%= render "conversation_messages/form", conversation: @conversation, message: @message %>
  </div>
</div>

<script>
  // Auto-scroll to bottom on new messages
  document.addEventListener('turbo:before-stream-render', function(e) {
    const container = document.getElementById('messages_container');
    const isAtBottom = container.scrollHeight - container.scrollTop === container.clientHeight;
    
    // Only auto-scroll if user is already at bottom
    if (isAtBottom) {
      requestAnimationFrame(() => {
        container.scrollTop = container.scrollHeight;
      });
    }
  });
  
  // Initial scroll to bottom
  document.addEventListener('turbo:load', function() {
    const container = document.getElementById('messages_container');
    if (container) {
      container.scrollTop = container.scrollHeight;
    }
  });
</script>