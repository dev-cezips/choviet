<div class="text-center py-8">
  <div class="mb-4">
    <span class="text-4xl">âœ…</span>
  </div>

  <h3 class="text-lg font-semibold text-gray-900 mb-2">
    <%= t('inquiries.success_title') %>
  </h3>

  <p class="text-sm text-gray-600 mb-6">
    <%= t('inquiries.success_description') %>
  </p>

  <div class="flex flex-col sm:flex-row gap-3 justify-center">
    <% if inquiry.post.present? %>
      <%= link_to t('inquiries.back_to_post'),
                  post_path(inquiry.post),
                  class: "inline-flex items-center justify-center px-6 py-2 bg-blue-600 text-white rounded-md font-medium hover:bg-blue-700" %>
    <% else %>
      <%= link_to t('inquiries.back_to_profile'),
                  user_path(inquiry.recipient),
                  class: "inline-flex items-center justify-center px-6 py-2 bg-blue-600 text-white rounded-md font-medium hover:bg-blue-700" %>
    <% end %>
    <%= link_to t('inquiries.back_to_home'),
                root_path,
                class: "inline-flex items-center justify-center px-6 py-2 bg-gray-200 text-gray-700 rounded-md font-medium hover:bg-gray-300" %>
  </div>
</div>
