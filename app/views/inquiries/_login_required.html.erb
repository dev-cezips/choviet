<div class="text-center py-8">
  <div class="mb-4">
    <span class="text-4xl">🔐</span>
  </div>

  <h3 class="text-lg font-semibold text-gray-900 mb-2">
    <%= t('inquiries.login_required_title') %>
  </h3>

  <p class="text-sm text-gray-600 mb-6">
    <%= t('inquiries.login_required_description') %>
  </p>

  <div class="flex flex-col sm:flex-row gap-3 justify-center">
    <%= link_to t('nav.sign_in'),
                new_user_session_path,
                class: "inline-flex items-center justify-center px-6 py-2 bg-blue-600 text-white rounded-md font-medium hover:bg-blue-700" %>
    <%= link_to t('nav.sign_up'),
                new_user_registration_path,
                class: "inline-flex items-center justify-center px-6 py-2 bg-gray-200 text-gray-700 rounded-md font-medium hover:bg-gray-300" %>
  </div>

  <p class="text-xs text-gray-500 mt-4">
    <%= t('inquiries.login_draft_saved') %>
  </p>
</div>
