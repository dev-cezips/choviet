<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Images Section -->
    <div>
      <% if @product.images.attached? %>
        <div class="space-y-4">
          <!-- Main Image -->
          <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
            <%= image_tag @product.images.first.variant(resize_to_limit: [800, 800]), 
                class: "w-full h-full object-contain", 
                id: "main-product-image" %>
          </div>
          
          <% if @product.images.count > 1 %>
            <!-- Thumbnail Gallery -->
            <div class="grid grid-cols-5 gap-2">
              <% @product.images.each_with_index do |image, index| %>
                <button type="button" class="aspect-square bg-gray-100 rounded-lg overflow-hidden border-2 <%= index == 0 ? 'border-primary' : 'border-transparent' %> hover:border-gray-300 transition-colors"
                        onclick="document.getElementById('main-product-image').src = '<%= url_for(image.variant(resize_to_limit: [800, 800])) %>'; 
                                 document.querySelectorAll('.aspect-square button').forEach(b => b.classList.remove('border-primary')); 
                                 this.classList.add('border-primary');">
                  <%= image_tag image.variant(resize_to_limit: [100, 100]), class: "w-full h-full object-cover" %>
                </button>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="aspect-square bg-gray-100 rounded-lg flex items-center justify-center">
          <div class="text-gray-400">
            <svg class="w-24 h-24 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p class="text-center mt-2">Không có hình ảnh</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Product Info Section -->
    <div>
      <div class="bg-white rounded-lg shadow-sm p-6 space-y-6">
        <!-- Title and Price -->
        <div>
          <h1 class="text-2xl font-bold mb-4"><%= @product.name %></h1>
          
          <div class="flex items-baseline gap-2 mb-4">
            <span class="text-3xl font-bold text-primary">
              <%= format_money(@product.price, @product.currency) %>
            </span>
          </div>
        </div>

        <!-- Condition -->
        <div>
          <h3 class="text-sm font-medium text-gray-700 mb-2"><%= t("products.condition_label", default: "Tình trạng") %></h3>
          <%= render "shared/badge",
              icon: product_condition_icon(@product.condition),
              label: product_condition_label(@product.condition),
              class_name: product_condition_badge_class(@product.condition) %>
        </div>

        <!-- Description -->
        <% if @product.description.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-2">Mô tả</h3>
            <div class="text-gray-600 whitespace-pre-wrap"><%= @product.description %></div>
          </div>
        <% end %>

        <!-- Status -->
        <%= render "shared/status_panel",
            icon: product_availability_icon(@product),
            label: product_availability_label(@product),
            variant: @product.sold? ? :danger : :success %>

        <!-- Action Buttons -->
        <div class="flex gap-3 pt-4 border-t">
          <%= link_to "Sửa", edit_product_path(@product), class: "flex-1 text-center px-4 py-2 border border-primary text-primary rounded-lg text-sm font-medium hover:bg-primary hover:text-white transition-colors" %>
          <%= button_to "Xóa", product_path(@product), 
              method: :delete, 
              data: { turbo_confirm: "Bạn có chắc muốn xóa sản phẩm này?" },
              class: "flex-1 px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-medium hover:bg-red-700 transition-colors cursor-pointer" %>
        </div>
      </div>

      <!-- Additional Info -->
      <div class="mt-4 text-sm text-gray-500">
        <p>ID: #<%= @product.id %></p>
        <p>Ngày tạo: <%= @product.created_at.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to "← Quay lại danh sách", products_path, class: "text-primary hover:text-primary-hover transition-colors" %>
  </div>
</div>