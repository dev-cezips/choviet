<div class="bg-white border-b sticky top-0 z-10">
  <div class="max-w-screen-lg mx-auto px-4 py-3">
    <%= form_with url: (local_assigns[:url].presence || request.path), method: :get, local: true, class: "space-y-3" do |f| %>
      <!-- Search Bar -->
      <div class="flex gap-2">
        <%= text_field_tag :q, params[:q], 
            placeholder: t('posts.placeholders.search'),
            class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <%= button_tag type: "submit", 
            class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        <% end %>
      </div>
      
      <!-- Filters -->
      <div class="flex flex-wrap gap-2">
        <!-- Post Type Filter -->
        <select name="type" onchange="this.form.submit()" 
                class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value=""><%= t("posts.filters.all_types") %></option>
          <% post_type_order.each do |type| %>
            <option value="<%= type %>" <%= "selected" if params[:type] == type %>><%= post_type_label(type) %></option>
          <% end %>
        </select>
        
        <!-- Sort Filter -->
        <select name="sort" onchange="this.form.submit()"
                class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value=""><%= t('posts.sorting.newest') %></option>
          <option value="popular" <%= "selected" if params[:sort] == "popular" %>><%= t('posts.sorting.popular') %></option>
          <% if params[:type] == "marketplace" %>
            <option value="price_low" <%= "selected" if params[:sort] == "price_low" %>><%= t('posts.sorting.price_low') %></option>
            <option value="price_high" <%= "selected" if params[:sort] == "price_high" %>><%= t('posts.sorting.price_high') %></option>
          <% end %>
        </select>
        
        <!-- Price Range (for marketplace only) -->
        <% if params[:type] == "marketplace" %>
          <div class="flex items-center gap-1">
            <%= number_field_tag :min_price, params[:min_price], 
                placeholder: t('posts.placeholders.price_from'),
                class: "w-24 px-2 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <span class="text-gray-500">-</span>
            <%= number_field_tag :max_price, params[:max_price],
                placeholder: t('posts.placeholders.price_to'),
                class: "w-24 px-2 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
        <% end %>
        
        <!-- Clear Filters -->
        <% if params[:q].present? || params[:type].present? || params[:sort].present? || params[:min_price].present? || params[:max_price].present? %>
          <%= link_to t('actions.clear_filters'), posts_path, 
              class: "px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>