<%= turbo_frame_tag "favorite_#{post.id}" do %>
  <% if user_signed_in? %>
    <% if post.favorited_by?(current_user) %>
      <%= button_to post_favorite_path(post), 
          method: :delete,
          class: "inline-flex items-center gap-1 text-red-500 hover:text-red-600 transition-colors",
          data: { turbo_frame: "_top" } do %>
        <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
          <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
        </svg>
        <span class="text-sm"><%= post.favorites_count %></span>
      <% end %>
    <% else %>
      <%= button_to post_favorite_path(post), 
          method: :post,
          class: "inline-flex items-center gap-1 text-gray-500 hover:text-red-500 transition-colors",
          data: { turbo_frame: "_top" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 20 20">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
        <span class="text-sm"><%= post.favorites_count %></span>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to new_user_session_path, 
        class: "inline-flex items-center gap-1 text-gray-500 hover:text-gray-600 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 20 20">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
      </svg>
      <span class="text-sm"><%= post.favorites_count %></span>
    <% end %>
  <% end %>
<% end %>