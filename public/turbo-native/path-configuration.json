{
  "settings": {
    "screenshots_enabled": true
  },
  "rules": [
    {
      "patterns": [
        "^/$",
        "^/posts$"
      ],
      "properties": {
        "context": "default"
      }
    },
    {
      "patterns": [
        "^/chat_rooms$",
        "^/chat_rooms/\\d+$"
      ],
      "properties": {
        "context": "default"
      }
    },
    {
      "patterns": [
        "^/me$"
      ],
      "properties": {
        "context": "default"
      }
    },
    {
      "patterns": [
        "^/messages/\\d+/reports/new$",
        "^/conversation_messages/\\d+/reports/new$",
        "^/posts/\\d+/reports/new$",
        "^/posts/\\d+/chat_rooms/\\d+/reviews/new$"
      ],
      "properties": {
        "context": "modal"
      }
    },
    {
      "patterns": [
        "^/users/sign_in$",
        "^/users/sign_up$",
        "^/users/password/new$",
        "^/users/password/edit$"
      ],
      "properties": {
        "presentation": "replace"
      }
    },
    {
      "patterns": [
        ".*"
      ],
      "properties": {
        "context": "default"
      }
    }
  ]
}
